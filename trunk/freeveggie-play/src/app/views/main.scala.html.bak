	<link rel="apple-touch-icon-precomposed" sizes="72x72" href="bootstrap/ico/apple-touch-icon-72-precomposed.png">
	<link rel="apple-touch-icon-precomposed" Href="bootstrap/ico/apple-touch-icon-57-precomposed.png"-->
</head>
<body>
	<div class="alert alert-error" id="messagePanel">
		<span id="message"></span>
	</div>
	<div class="navbar navbar-fixed-top">
		<div class="navbar-inner">
			<div class="container">
				<a class="btn btn-navbar" data-toggle="collapse"
					data-target=".nav-collapse"> <span class="icon-bar"></span> <span
					class="icon-bar"></span> <span class="icon-bar"></span>
				</a>
				<div class="nav-collapse">
					<form class="navbar-search pull-right form-inline"
						action="/disconnect">
						<button type="submit" class="btn" style="margin-top: 0px;">Deconnexion</button>
					</form>
					<p class="navbar-text pull-right">
						Logged in as <a href="#">@session.get("connectedName")&nbsp;</a>
					</p>
				</div>
				<!--/.nav-collapse -->
			</div>
		</div>
	</div>
	<div class="container">
		<header class="jumbotron subhead" id="overview">
			<h1>Freeveggie</h1>
			<p class="lead">Find and share real home made products.</p>
			<div class="subnav">
				<ul class="nav nav-pills">
					@if(page == "home") {
						<li class="active"><a href="home">My account</a></li> 
					} else {
						<li class=""><a href="home">My account</a></li> 
					} @if(page == "search") {
						<li class="active"><a href="search">Share/Search</a></li> 
					} else {
						<li class=""><a href="search">Share/Search</a></li> }

					<!-- li class=""><a href="comunities">Community</a></li -->

					@if(page == "requests") {
					<li class="active"><a href="requests">Requests</a></li> } else {
					<li class=""><a href="requests">Requests</a></li> }

					<!--li class=""><a href="messages">Messages</a></li-->

					@if(page == "about") {
					<li class="active"><a href="about">About</a></li> } else {
					<li class=""><a href="about">About</a></li> }
				</ul>
			</div>
		</header>
		@content
		<footer class="footer">
			<div class="container">
				<p>Last connexion @session.get("lastConnexion")</p>
			</div>
		</footer>
		<!--/.fluid-container-->
	</div>
	<!-- /.container-->
</body>
<!-- Le javascript
    ================================================== -->
<!-- Placed at the end of the document so the pages load faster -->
