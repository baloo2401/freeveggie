<script src="@routes.Assets.at("javascripts/mustache/mustache.js")"></script>
<script>
	var userId = @session.get("connected");
	var userName = "@session.get("connectedName")";
	var userLastconnexion = "@session.get("lastConnexion")";
</script>

@if(page == "home") {
	<script src="@routes.Assets.at("javascripts/page/home.js")"></script>
} @if(page == "search") {
	<script src="@routes.Assets.at("javascripts/page/search.js")"></script>
} @if(page == "community") {
	<script src="@routes.Assets.at("javascripts/page/community.js")"></script>
} @if(page == "requests") {
	<script src="@routes.Assets.at("javascripts/page/requests.js")"></script>
} @if(page == "message") {
	<script src="@routes.Assets.at("javascripts/page/message.js")"></script>
} @if(page == "about") {
	<script src="@routes.Assets.at("javascripts/page/about.js")"></script>
}
</html>
